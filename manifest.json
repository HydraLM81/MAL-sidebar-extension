{
  "manifest_version": 3,
  "name": "MAL Anime List Sidebar",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assest/images/ext-icon.png",
      "48": "assest/images/ext-icon.png",
      "128": "assest/images/ext-icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "assest/images/ext-icon.png",
    "48": "assest/images/ext-icon.png",
    "128": "assest/images/ext-icon.png"
  },
  "content_scripts": [
  {
    "matches": ["*://myanimelist.net/*"],
    "js": ["contentScript.js"],
    "css": ["sidebar-style.css"]
  }
]

}

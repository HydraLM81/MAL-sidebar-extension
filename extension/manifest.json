{
  "manifest_version": 3,
  "name": "MAL Anime List Sidebar",
  "version": "1.0",
  "description": "Adds a sidebar to the MyAnimeList anime list page with selected anime details and editing options.",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assest/images/ext-icon.png",
      "48": "assest/images/ext-icon.png",
      "128": "assest/images/ext-icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://myanimelist.net/animelist/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}

{
  "manifest_version": 3,
  "name": "MAL Anime List Sidebar",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assest/images/ext-icon.png",
      "48": "assest/images/ext-icon.png",
      "128": "assest/images/ext-icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
